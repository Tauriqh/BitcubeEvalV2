@page
@model BitcubeEval.Pages.AppUser.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" value="@Model.CookieEmailAddress" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <label asp-for="@Model.RememberEmailAddress">
                        <input asp-for="@Model.RememberEmailAddress" />
                        @Html.DisplayNameFor(m => m.RememberEmailAddress)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input id="PasswordInput" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}